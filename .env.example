
# MySQL Database Configuration
DB_HOST=your_mysql_host
DB_PORT=3306
DB_NAME=your_database_name
DB_USERNAME=your_mysql_username
DB_PASSWORD=your_super_secure_password_here
DB_DRIVER=com.mysql.cj.jdbc.Driver

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# JWT Configuration
JWT_SECRET=your_super_long_random_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRATION=86400000

# PostApp Token Configuration
POSTAPP_EXPIRATION_TIME=86400000
POSTAPP_REFRESH_TOKEN_EXPIRES_IN=604800

# Swagger/OpenAPI Configuration
SWAGGER_ENABLED=true
SWAGGER_UI_PATH=/swagger-ui.html
SWAGGER_API_DOCS_PATH=/v3/api-docs
SWAGGER_PACKAGES_TO_SCAN=com.yourpackage.controllers
SWAGGER_TRY_IT_OUT=true
SWAGGER_OPERATIONS_SORTER=method
SWAGGER_TAGS_SORTER=alpha
SWAGGER_FILTER=true
SWAGGER_DISPLAY_DURATION=true
SWAGGER_SHOW_EXTENSIONS=true
SWAGGER_SHOW_COMMON_EXTENSIONS=true
SWAGGER_MODELS_EXPAND_DEPTH=1
SWAGGER_MODEL_EXPAND_DEPTH=1

# Hibernate Configuration
DDL_AUTO=validate
SHOW_SQL=false

# Application Settings
APP_NAME=your-app-name
SPRING_PROFILE=development
PORT=8080
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development